@page "/login"

<PageTitle>LogIn</PageTitle>

@inject NavigationManager NavigationManager

<style>
    .login-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #fff;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        font-size: 16px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .btn-login {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<div class="login-container">
    <h3>Login</h3>

    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" class="form-control" @bind="@Email" />
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" class="form-control" @bind="@Password" />
    </div>

    <button type="button" class="btn-login" @onclick="LogIn">Login</button>
</div>

@code {
    private string Email { get; set; }
    private string Password { get; set; }

    private void LogIn()
    {
        // Perform login logic here
        // Example: check if email and password are valid

        if (IsValidUser(Email, Password))
        {
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            // Display error message or show validation errors
            // Example: display a toast notification
            // You can use third-party libraries like Blazored.Toast to display notifications
        }
    }

    private bool IsValidUser(string email, string password)
    {
        // Add your validation logic here
        // Example: check if the email and password match a user in the database

        // Return true if valid, false otherwise
        return (email == "user@example.com" && password == "password");
    }
}